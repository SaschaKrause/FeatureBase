@import "./common/config.styl"

body.bodystate_story-item
  display: block
  background-color: #F1B64B
  // background-color: #7AA850
  padding: 60px 30px 0 30px
  
// all styles containing the view container and below
.story-item
  display: block

  .complexety-level
    display: inline-block
    padding: 10px 16px 5px 16px;
    background-color: rgba(255,255,255,0.25)
    font-weight: bold
    color: rgba(0,0,0,0.4)

  .story-wrapper  
    padding: 16px;
    background-color: rgba(255,255,255,0.25)

    .connector
      height: 10px;

    .card-wrapper
      background-color: white
      box-shadow 2px 3px 6px rgba(0, 0, 0, 0.14)
      padding: 20px

      .role
        font-weight: 400
        color: rgba(0,0,0,0.8)

      .highlight
        // color: #CA2C2C // red
        background-color: #65A84F // green
        padding: 0 5px
        color: white


      .item-title
        text-align: right
        color: rgba(0,0,0,0.50)
        font-size: 14px

      .description
        color: rgba(0,0,0,0.6)
        line-height: 1.3

      .challenges
        margin-top: 12px
        color: #3991DA
        line-height: 1.3

      ul.crew-list
        list-style: none
        margin: 0

        li
          margin-bottom: 5px
          padding 8px 12px
          border-bottom: 1px solid rgba(0,0,0,0.16)
          // background-color: rgba(0,0,0,0.08)

          .crew-prefix
            color: rgba(0,0,0,0.50)
            font-size: 14px

          .crew-name
            background-color: #316D98
            padding: 3px 5px
            color: white
            font-size: 18px            
            
          &.last
            border: none
     
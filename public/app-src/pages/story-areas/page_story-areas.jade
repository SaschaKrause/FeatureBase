div.story-areas
  

  .row

    .medium-12.columns(style=" padding: 16px; background-color: rgba(255, 255, 255, 0.25)")
      table(style="width:100%;  background: none !important; margin-bottom: 0;")
        thead
          tr
            th
              | features
            th(ng-repeat="area in areas", style="text-align:center;") 
              span(style="font-size: 14px;")
                | {{area.name}}   

        tbody(ng-repeat="category in categories")
          tr.category
            td(colspan="{{areas.length +1}}")
              | {{category.name}} 
              span.category-subtitle
                |  - {{category.description}}
          tr.story(ng-repeat="story in getStoriesFromCategory(category.id)", ui-sref="none.story-item({id: story.id})")
            td.story-summary
              i.fa.fa-chevron-right
              | {{story.summary}} 
              i.fa.fa-euro(ng-if="story.profit", style="float:right;font-size:16px")
            td(ng-repeat="area in areas", style="text-align:center;")
              span.impact-indicator(ng-repeat="impact in _.range(0,getImpactFromStoryForArea(area.id, story.id))")
                i.fa.fa-circle(style="font-size:10px;")
@import "./common/config.styl"

body.bodystate_story-list
  display: block
  background-color: #F1B64B
  // background-color: #7AA850
  padding: 60px 30px 0 30px
  
  
// all styles containing the view container and below
.story-list
  display: block


  .filter-wrapper
    padding: 6px;
    background-color: rgba(255,255,255,0.25)
    margin-bottom: 10px

  .story-state
    display: inline-block
    padding: 10px 16px 5px 16px;
    background-color: rgba(255,255,255,1)
    font-weight: bold
    color: rgba(0,0,0,0.6)


  .complexety-level
    display: inline-block
    padding: 5px 6px 5px 6px;
    background-color: rgba(255,255,255,0.70)
    color: rgba(0,0,0,0.4)

  .story-wrapper  
    padding: 6px;
    // background-color: rgba(255,255,255,0.25)
    cursor: pointer
    margin-bottom: 10px

    &:hover
      .card-wrapper
        background-color: rgba(255,255,255,0.8)


    .card-wrapper
      background-color: white
      color: rgba(0,0,0,0.6)
      box-shadow 2px 3px 6px rgba(0, 0, 0, 0.14)
      padding: 10px
      line-height: 1.5

      .role
        font-weight: 500
        color: rgba(0,0,0,0.8)

      .highlight
        // color: #CA2C2C // red
        background-color: #65A84F // green
        padding: 2px 5px
        color: white
